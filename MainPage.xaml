<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Everyday.GUI"
             xmlns:base="clr-namespace:Everyday.GUI.Base"
             Loaded="ContentPage_Loaded"
             x:Class="Everyday.GUI.MainPage">
    <ContentPage.BindingContext>
        <base:DependencyInjectoinSource Type="{x:Type local:MainPageViewModel}" />
    </ContentPage.BindingContext>
    <ScrollView>
        <VerticalStackLayout 
            Spacing="25" 
            Padding="30,0" 
            VerticalOptions="Center">

            <Editor x:Name="loginTE" Text="{Binding Login}" />
            <Editor x:Name="passwordTE" Text="{Binding Password, UpdateSourceEventName=PropertyChanged}"/>

            <Button 
                x:Name="CounterBtn"
                Text="Click me"
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnCounterClicked"
                Command="{Binding LoginCommand}"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
 
</ContentPage>
