<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Everyday.GUI"
             xmlns:base="clr-namespace:Everyday.GUI.Base"
             Loaded="ContentPage_Loaded"
             BackgroundColor="AliceBlue"
             x:Class="Everyday.GUI.MainPage">
    <ContentPage.BindingContext>
        <base:DependencyInjectoinSource Type="{x:Type local:MainPageViewModel}" />
    </ContentPage.BindingContext>
    <ScrollView>
        <VerticalStackLayout 
            Spacing="25" 
            Padding="30,0" 
            VerticalOptions="Center">
            <Editor x:Name="loginTE" 
                    Text="{Binding Login}" 
                    MinimumWidthRequest="100"/>
            <Editor x:Name="passwordTE" 
                    Text="{Binding Password}" 
                    MinimumWidthRequest="100"/>
            <Button x:Name="LoginBtn"
                Text="Login"
                SemanticProperties.Hint="Let's you login into EveryDay using provided credentials."
                Command="{Binding LoginCommand}"
                HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
