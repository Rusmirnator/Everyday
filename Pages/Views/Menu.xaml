<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Everyday.GUI.Pages.Views.Menu"
             xmlns:viewModels="clr-namespace:Everyday.GUI.Pages.ViewModels"
             xmlns:base="clr-namespace:Everyday.GUI.Base"
             Title="Menu">
    <ContentPage.BindingContext>
        <base:DependencyInjectionSource Type="{x:Type viewModels:MenuViewModel}" />
    </ContentPage.BindingContext>
    <VerticalStackLayout>
        <Button Text="Purchases" Command="{Binding NavigateCommand}" CommandParameter="Purchases" />
        <Button Text="Alerts" Command="{Binding NavigateCommand}" CommandParameter="Alerts" />
        <Button Text="Inventory" Command="{Binding NavigateCommand}" CommandParameter="Inventory" />
        <Button Text="Finance" Command="{Binding NavigateCommand}" CommandParameter="Finance" />
    </VerticalStackLayout>
</ContentPage>